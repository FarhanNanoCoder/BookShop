@using BulkyBook.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container">
    
    <div class="row ">
        <div class="col-6">
           <h1>#Category</h1>
        </div>
        <div class="col-6" style="display:flex;justify-content:flex-end;">
        <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
           <i class="bi bi-plus-circle"></i> Create new category 
          </a>
        </div>
   </div>
</div>
<br />
<div class="container">
<table class="table" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>
                Caategory name
            </th>
            <th>
                Display order
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:50%">
                    @obj.Name
                </td>
                <td style="width:30%">
                    @obj.DisplayOrder
                </td>
                <td style="width:20%">
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    <a  class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
</div>
